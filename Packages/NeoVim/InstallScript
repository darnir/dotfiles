#!/bin/bash

PACKAGE_NAME="NeoVim"

prepare() {
	install_packages neovim python-neovim python2-neovim xsel
}

install() {
    install_directory nvim userconf false true
}

post_install() {
	echo "Installing vim-plug Plugin Manager"

    mkdir -p "$HOME/.config/nvim/autoload"

	wget -O ~/.config/nvim/autoload/plug.vim https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

	echo "vim-plug installed"
    sleep 2
    nvim +PlugInstall +qall

	pushd ~
	git clone https://github.com/powerline/fonts.git .powerline-fonts
	pushd .powerline-fonts
	./install.sh
	popd
	popd

	install_aur par
	install_packages vim-systemd shellcheck rust cargo
}
