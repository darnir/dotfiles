# Modified Commands
alias cp='cp -v'
alias df='df -h'
alias du='du -c -h'
alias less='less -r'
alias ls='ls --color'
alias mkdir='mkdir -p -v'
alias more='less'
alias nano='vim'
alias ping='ping -c 5'
alias rm='rm -v'
alias vi="nvim"
alias vim="nvim"
alias irssi="screen irssi"

# New Commands
alias :q='exit'
alias :wq='exit'
alias alert='beep -f 5000 -l 60 -r 2'
alias aur="cower -ddfuc --target=$HOME/AUR/"
alias cleantex='rm *.{aux,bbl,blg,log,lot,out,toc,pdf,dvi,fdb_latexmk,fls} 2>/dev/null'
alias da='date "+%A, %B %d, %Y [%T]"'
alias du1='du --max-depth=1'
alias gitignore='git status --porcelain | grep '^??' | cut -c4- >>.gitignore'
alias hist='history | grep'      # requires an argument
alias la='ls -la'
alias mirrorlist='sudo reflector --save /etc/pacman.d/mirrorlist --sort rate --verbose'
alias musicdb='mpc update --wait && mpc ls | mpc add'
alias netuse='sudo netstat -lantp | grep -i establ'
alias openports='netstat --all --numeric --programs --inet --inet6'
alias path='printf ${PATH//:/\\n}'
alias pfind='ps aux | grep'
alias vimup='vim +PlugUpdate'
alias syncmail='kill -10 `cat ~/.offlineimap/pid`'
alias watchmail='watch systemctl --user status offlineimap.service'
alias restartmail='systemctl --user restart offlineimap.service'
alias restartnet='sudo systemctl restart netctl-auto@wlp9s0.service'
alias netstatus="systemctl status netctl-auto@wlp9s0.service"
alias stopmail="systemctl --user stop offlineimap.service"

# Power Configuration


# Aliases for Wget
alias proj='cd ~/Programming/wget/'
alias resetproj='./bootstrap --skip-po && configwget'
alias resetprojgcc='./bootstrap --skip-po && configwgetgcc'
alias resetprojpar='./bootstrap --skip-po && parallelconfig'

# Safety Features
alias chgrp='chgrp --preserve-root'
alias chmod='chmod --preserve-root'
alias chown='chown --preserve-root'

# Allows one to use bash aliases with superuser permissions. See bash(1) for
# details
alias sudo='sudo '

# Make Systemd Easier
if have systemctl && [[ -d /run/systemd/system ]]; then
	_status()	{ sudo systemctl status -a -n0 "$@"; }
	start()		{ sudo systemctl start "$@";	_status "$@"; }
	stop()		{ sudo systemctl start "$@";	_status "$@"; }
	restart()	{ sudo systemctl restart "$@";	_status "$@"; }
	reload()	{ sudo systemctl reload "$@";	_status "$@"; }
	status()	{ systemctl status -a "$@"; }

	alias enable="sudo systemctl enable"
	alias disable="sudo systemctl disable"
	alias list='systemctl list-units -t path,service,socket --no-legend'
	alias userctl='systemctl --user '
	ustart()   { userctl start "$@";   userctl status -a "$@"; }
	ustop()    { userctl stop "$@";    userctl status -a "$@"; }
	urestart() { userctl restart "$@"; userctl status -a "$@"; }
	ureload()  { userctl reload "$@";  userctl status -a "$@"; }
	ustatus()  { userctl status -a "$@"; }
	alias ulist='userctl list-units -t path,service,socket --no-legend'
fi

# Load other temporary aliases
[[ -f ~/.temp_aliases ]] && . ~/.temp_aliases

